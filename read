#!/bin/sh

process () {
  echo
}

if [ -f background.png ];
then
  background=background.png
fi

if [ -z "$background" ];
then
  echo "error" 1>&2
  exit 1
fi

geometry=$(identify -verbose "$background" | grep "  Geometry: ")
backgroundWidth=$(echo "$geometry" | \
  sed -En 's/^  Geometry: ([0-9]+)x[0-9]+\+0\+0$/\1/p')
backgroundHeight=$(echo "$geometry" | \
  sed -En 's/^  Geometry: [0-9]+x([0-9]+)\+0\+0$/\1/p')
echo $backgroundHeight
